<div id="@id" class="chat">
    <div class="header bold">@ChildContent</div>
    <div class="chat-content"></div>
    <form class="chat-form" onsubmit="postToChat(event)">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Message" aria-label="Message">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">
                    <span class="oi oi-arrow-right" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </form>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string id { get; set; }
}